<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-configuration PUBLIC  
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"  
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">  
  
<hibernate-configuration>  
  
	<session-factory>  
		<property name="show_sql">true</property>  
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>  
		<property name="connection.url">jdbc:mysql://localhost:3306/mindteckstore</property>  
		<property name="connection.username">root</property>  
		<property name="connection.password">12345678</property>  
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property> 
		<property name="hibernate.hbm2ddl.auto">update</property> 
      
        <!-- Products -->
 		<mapping class="main.java.com.mindteck.store.model.product.Product"/>
 		<mapping class="main.java.com.mindteck.store.model.product.Book"/>
		<mapping class="main.java.com.mindteck.store.model.product.Training"/> 
		<mapping class="main.java.com.mindteck.store.model.product.Gift"/>
		
		<!-- Users -->
		<mapping class="main.java.com.mindteck.store.model.user.User"/>
		<mapping class="main.java.com.mindteck.store.model.user.Customer"/>
		
		<!-- ecommerce -->
		<mapping class="main.java.com.mindteck.store.model.ecommerce.ProductRequest"/>
		
	</session-factory>  
  
</hibernate-configuration>